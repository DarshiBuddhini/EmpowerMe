<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".RegSuccessActivity">

    <ImageView
        android:id="@+id/SmileImage"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="50dp"
        android:accessibilityLiveRegion="polite"
        android:textAlignment="center"
        app:srcCompat="@drawable/smile_success_img" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gilroy_extrabold"
        android:text="Hi Imesh !"
        android:textAlignment="center"
        android:textColor="@color/gray_dark_clr"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SuccessMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Registered successfully!  "
        android:textAlignment="center"
        android:textColor="@color/gray_dark_clr"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/gilroy_extrabold"
        android:text="Let's go"
        android:textAlignment="center"
        android:textColor="@color/gray_dark_clr"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/right_arrow_orange" />
</LinearLayout>